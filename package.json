{
  "name": "content-caddy",
  "version": "0.0.2",
  "description": "A browser extension to easily save, organise, and share sections of web content packed with a powerful Highlight to Explain feature.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ttebify/content-caddy.git"
  },
  "author": "Justice Ekemezie",
  "bugs": {
    "url": "https://github.com/ttebify/content-caddy/issues"
  },
  "homepage": "https://github.com/ttebify/content-caddy#readme",
  "scripts": {
    "build": "tsc --noEmit && vite build",
    "build:watch": "cross-env __DEV__=true vite build --watch",
    "build:hmr": "rollup --config utils/reload/rollup.config.ts",
    "wss": "node utils/reload/initReloadServer.js",
    "dev": "yarn build:hmr && (run-p wss build:watch)",
    "test": "jest"
  },
  "type": "module",
  "dependencies": {
    "clsx": "^1.2.1",
    "fuse.js": "^6.6.2",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.1.0",
    "@testing-library/react": "13.4.0",
    "@types/chrome": "0.0.238",
    "@types/jest": "29.0.3",
    "@types/node": "18.15.11",
    "@types/react": "18.0.21",
    "@types/react-dom": "18.0.11",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "5.56.0",
    "@typescript-eslint/parser": "5.57.1",
    "@vitejs/plugin-react": "3.1.0",
    "chokidar": "^3.5.3",
    "cross-env": "^7.0.3",
    "eslint": "8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.32.2",
    "fs-extra": "11.1.0",
    "jest": "29.0.3",
    "jest-environment-jsdom": "29.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "2.7.1",
    "rollup": "2.79.1",
    "sass": "1.55.0",
    "ts-jest": "29.1.0",
    "ts-loader": "9.4.2",
    "typescript": "5.0.3",
    "vite": "4.2.1",
    "ws": "8.9.0"
  }
}
